#!/usr/bin/env ruby

$:.unshift(File.join(File.dirname(__FILE__), '..', 'lib'))
require 'i2c/drivers/ss1602'

trap('INT'){
  exit
}

ARGF.binmode

begin
  display = I2C::Drivers::SS1602::Display.new('/dev/i2c-1', 0x27)

  ARGF.each do |line|
    line.split.each do |arg|
      display.off
      display.text(arg, 0, true)
      display.on
      sleep 0.5
    end
  end
ensure
  display.clear if display
end
